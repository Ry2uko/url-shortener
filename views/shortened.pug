doctype html

html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible" content="IE-edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title URL Shortener

    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    // 'Anybody', cursive
    link(href="https://fonts.googleapis.com/css2?family=Anybody&display=swap" rel="stylesheet")
    // 'Source Sans Pro', sans-serif
    link(href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap" rel="stylesheet")

    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" 
    rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" 
    crossorigin="anonymous")
    link(rel="stylesheet" href="/public/css/shortened.css" type="text/css")
    script(src="https://kit.fontawesome.com/b40850cb13.js" crossorigin="anonymous")

  body
    h1.title URL Shortened

    .link-wrapper.container 
      .ig-wrapper
        h4.h4label Your shortened link: 
        .input-group
          input(type="text" placeholder="" value=`${shortened_url}`
          readonly)#shortenedlink.form-control.shadow-none
          .input-group-append 
            button(type="button" title="Copy to Clipboard")#clipboardCopy.btn.btn-outline-secondary
              i.fa-solid.fa-clipboard-list
      
      a(type="button" href="/").againbtn.btn.btn-primary Shorten another url

    p.credits-footer A project by 
      a(href="https://github.com/Ry2uko" target="_blank") Ry2uko

    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" 
    integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
    crossorigin="anonymous" referrerpolicy="no-referrer")
    script(type="text/javascript" src="/public/js/shortened.js")